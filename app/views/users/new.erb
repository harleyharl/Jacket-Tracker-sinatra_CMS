<h1> Sign up for Jacket Tracker </h1>

<% if session[:fail_user_exists] %>
  <%= session[:fail_user_exists] %><br />
  <a href='/login'>Log in here </a>
<% else %>
  <%= session[:fail] %>
  <form action="/signup" method="POST">
    Enter a username
    <input type="text" name="username">
    Enter a password
    <input type="password" name="password">
    <br>
    <br>
    <input type="submit" value="Create account">
  </form>
<% end %>
<% clear_errors %>
