<h1>You are logged in as <%=@user.username%></h1>

<h1>These are your jackets and where to find them!</h1>


<%@user.jackets.each do |jacket|%>
  <b><a href='/<%=@user.slug%>/jackets/<%=jacket.slug%>'> <%=jacket.brand.name%> <%=jacket.jacket_type%> </a></b>
  <br>
  <i><a href='/<%=@user.slug%>/locations/<%=jacket.location.slug%>'> <%=Location.find_by_id(jacket.location_id).name%> </a></i>
  <br>
  <br>
  <%end%>
  <br>
  <br>

<br>
<a href='/jackets/new'>Add a new jacket</a>
<br><br>
<form action='/logout' method=POST>
<input type="submit" value="log out">
</form>
